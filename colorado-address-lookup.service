[Unit]
Description=Colorado Address Lookup Web Server
After=network.target

[Service]
Type=simple
User=user
WorkingDirectory=/home/user/clicker
ExecStart=/usr/bin/python3 /home/user/clicker/server.py
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=colorado-address-lookup

[Install]
WantedBy=multi-user.target
